{
    "general": {
        "auto_update_refs": true,
        "dump_mart_to_file": true
    },
    "activated_reports": [
        "pl"
    ],
    "all_reports": [
        "demo",
        "amt",
        "pl"
    ],
    "cols_configuration": {
        "group_id": "str",
        "calc_id": "int",
        "inception_dt": "date",
        "amount_amt": "float",
        "report_date": "date",
        "prev_report_date": "date",
        "inception_year": "int",
        "inception_month": "int",
        "report_year": "int",
        "report_month": "int"
    },
    "refs_cleanup_config": {
        "strip": {
            "excludes": []
        },
        "replaces": [
            {
                "what": " ",
                "to": " ",
                "excludes": []
            },
            {
                "what": "\n",
                "to": " ",
                "includes": []
            },
            {
                "what": "\r",
                "to": " ",
                "includes": []
            }
        ]
    },
    "sources": {
        "categorical_not_groups_cols": [
            {
                "name": "contract_type",
                "using_ref": "ref_contract_types"
            }
        ],
        "attributes": {
            "res_groups_ifrs_17": {
                "columns": [
                    "group_id",
                    "cohort_cd",
                    "inception_dt",
                    "ifrs_approach_cd",
                    "classification_category_cd",
                    "ifrs_onerous_type",
                    "direct_participation_flag",
                    "discret_participation_flag",
                    "portfolio_cd",
                    "currency_cd",
                    "calc_id",
                    "business_line_cd",
                    "policy_type_cd",
                    "investment_strategy_cd",
                    "product_name"
                ],
                "primary_key_columns": [
                    "group_id",
                    "calc_id"
                ],
                "additional_columns": {
                    "inception_year": "EXTRACT(YEAR FROM inception_dt)",
                    "inception_month": "EXTRACT(MONTH FROM inception_dt)",
                    "report_year": "EXTRACT(YEAR FROM '&dt_report_date'::date)",
                    "report_month": "EXTRACT(MONTH FROM '&dt_report_date'::date)"
                },
                "using_variables": [
                    "dt_report_date"
                ]
            }
        },
        "amounts": {
            "result_amount_gr": {
                "columns": [
                    "calc_id",
                    "group_id",
                    "currency_cd",
                    "amount_type_cd",
                    "amount_amt"
                ],
                "primary_key_columns": [
                    "group_id",
                    "calc_id",
                    "amount_type_cd"
                ],
                "amount_columns": [
                    "amount_amt"
                ]
            }
        }
    },
    "constructors": {
        "amt": {
            "filename": "constructor_rep_amt.xlsx",
            "constructor_sheet_name": "constructor",
            "header": 2
        },
        "pl": {
            "filename": "constructor_rep_pl_new.xlsx",
            "constructor_sheet_name": "constructor",
            "header": 2
        }
    },
    "reports": {
        "amt": {
            "report_name": "rep_ifrs17_amt",
            "group_attributes_source": "res_groups_ifrs_17",
            "group_amounts_source": "result_amount_gr",
            "initial_columns": [
                "calc_id",
                "inception_year",
                "report_year",
                "inception_month",
                "report_month",
                "group_id",
                "portfolio_cd"
            ],
            "mart_structure": {
                "table_name": "rep_ifrs17_amt",
                "columns": [
                    "report_date",
                    "calc_id",
                    "ifrs_approach_cd",
                    "group_id",
                    "portfolio_cd",
                    "cohort_cd",
                    "report_item_name",
                    "amount_amt"
                ],
                "using_constructor": "amt",
                "using_refs": [
                    "ref_report_items"
                ]
            }
        },
        "pl": {
            "report_name": "rep_ifrs17_pl",
            "group_attributes_source": "res_groups_ifrs_17",
            "group_amounts_source": "result_amount_gr",
            "initial_columns": [
                "calc_id",
                "inception_year",
                "report_year",
                "inception_month",
                "report_month",
                "group_id",
                "portfolio_cd",
                "contract_type"
            ],
            "mart_structure": {
                "table_name": "rep_ifrs17_pl",
                "columns": [
                    "report_date",
                    "calc_id",
                    "ifrs_approach_cd",
                    "group_id",
                    "portfolio_cd",
                    "cohort_cd",
                    "amount_type_cd",
                    "report_item_name",
                    "amount_amt"
                ],
                "using_constructor": "pl",
                "using_refs": [
                    "ref_report_items"
                ]
            }
        }
    },
    "refs": {
        "ref_group_attrs": {
            "filename": "Справочник атрибутов групп договоров.xlsx",
            "header": 0,
            "cd_col": "gr_attr_cd",
            "name_col": "gr_attr_name"
        },
        "ref_product": {
            "filename": "Справочник наименований продуктов.xlsx",
            "header": 0,
            "cd_col": "product_cd",
            "name_col": "product_name"
        },
        "ref_report_items": {
            "filename": "Справочник отчетных показателей.xlsx",
            "header": 0,
            "cd_col": "amount_type_cd",
            "name_col": "report_item_name",
            "where_condition": "where \"effective_from_dttm\" <= '&actual_date'::date and \"effective_to_dttm\" > '&actual_date'::date"
        }
    }
}